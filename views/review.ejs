<%- include('partials/header') %>

<section class="card">
  <h2>Відгук про поїздку</h2>

  <p><b>Водій:</b> <%= ride.driver_name || '—' %></p>

  <form method="POST" action="/rides/<%= ride.id_ride %>/review">
    <label>Оцінка (1–5)
      <input type="number" name="rating" min="1" max="5" required>
    </label>

    <label>Коментар
      <textarea name="comment" maxlength="500"></textarea>
    </label>

    <button class="btn" type="submit">Надіслати</button>
  </form>
</section>

<%- include('partials/footer') %>
